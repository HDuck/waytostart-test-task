include vehicle-table__heading
include vehicle-table__head-item
include vehicle-table__name
include vehicle-table__year
include vehicle-table__color
include vehicle-table__status
include vehicle-table__price
include vehicle-table__delete

- var i = 0;

mixin vehicle-table(heading, headArr, vehiclesObj)
    .vehicle-table
        +vehicle-table__heading(heading)
        while i < headArr.length
            +vehicle-table__head-item(headArr[i++])
        each item in vehiclesObj
            +vehicle-table__name(item.name, item.bonus)
            +vehicle-table__year(item.year)
            +vehicle-table__color(item.color)
            +vehicle-table__status(item.status)
            +vehicle-table__price(item.price)
            +vehicle-table__delete